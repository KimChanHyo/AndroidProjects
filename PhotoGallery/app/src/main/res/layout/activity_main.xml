<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

<!--    main Image's margin == 8dp
        thumbnail Image's   margin == 4dp(left, right)
                            onClick == onImageViewClicked   -->

    <!--    main Image  -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:contentDescription="@string/mainImg"
        app:srcCompat="@drawable/lulu01" />

    <!--    thumbnail Image's parent layout(horizontal) -->
    <LinearLayout
        android:id="@+id/subImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--    thumbnail Image 1   -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/img1"
            android:onClick="onImageViewClicked"
            app:srcCompat="@drawable/lulu01_low" />

        <!--    thumbnail Image 2   -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/img2"
            android:onClick="onImageViewClicked"
            app:srcCompat="@drawable/lulu02_low" />

        <!--    thumbnail Image 3   -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/img3"
            android:onClick="onImageViewClicked"
            app:srcCompat="@drawable/lulu03_low" />

        <!--    thumbnail Image 4   -->
        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/img4"
            android:onClick="onImageViewClicked"
            app:srcCompat="@drawable/lulu04_low" />
    </LinearLayout>

</LinearLayout>